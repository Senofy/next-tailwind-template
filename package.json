{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"format": "prettier --write \"components/**/**/*.tsx\""
	},
	"dependencies": {
		"clsx": "^1.1.1",
		"next": "11.1.2",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"@types/react": "17.0.27",
		"autoprefixer": "^10.3.6",
		"eslint": "7.32.0",
		"eslint-config-next": "11.1.2",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"husky": "^7.0.2",
		"postcss": "^8.3.8",
		"prettier": "^2.4.1",
		"tailwindcss": "^2.2.16",
		"typescript": "4.4.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		],
		"*.ts(x)?": [
			"eslint --fix",
			"prettier --write"
		],
		"*.css": "stylelint --fix"
	}
}
